<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RAMDHD.Converters"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:local="clr-namespace:RAMDHD"
             xmlns:welcomeScreens="clr-namespace:RAMDHD.Views.WelcomeScreens"
             x:Class="RAMDHD.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="appColors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="appStyles" Source="Resources/Styles/Styles.xaml" />
                <material:StyleResource ColorsOverride="{x:Reference appColors}"/>
                
            </ResourceDictionary.MergedDictionaries>
            <converters:ActivePageConverter x:Key="ActivePageConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
