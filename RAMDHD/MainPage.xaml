<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RAMDHD"
             x:Class="RAMDHD.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="ButtonNormalColor">#abdbe3</Color>
            <Color x:Key="ButtonPressedColor">#d5edf1</Color>
            <!-- Other resources... -->
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Timer Button with an SVG Image and Text -->
            <!-- Using Frame to make custom Button with reounded corners and Image+Label visual -->
            <local:CustomImageButton x:Name="customButton"
                         ImageSource="stopwatch.svg"
                         ButtonText="Timer"
                         Tapped="OnTimerClicked" />


            <!-- Calendar Button/Label -->
            <Button
                x:Name="CalendarBtn"
                Textt="Calendar"
                Style="{StaticResource ChildlikeButtonStyle}" 
                ContentLayout="Left, 20"
                Clicked="OnCalendarClicked"
                HorizontalOptions="FillAndExpand" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
