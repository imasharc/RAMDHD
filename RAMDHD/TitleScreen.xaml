<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAMDHD.TitleScreen">

    <VerticalStackLayout Spacing="25" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Title Text -->
        <Label Text="CutCatADHD" 
               FontSize="Large" 
               HorizontalOptions="Center" />

        <!-- Brain Image with Tap Gesture -->
        <Image x:Name="BrainImage"
               Source="brain.svg" 
               WidthRequest="200" 
               HeightRequest="200" 
               HorizontalOptions="Center">
            <Image.GestureRecognizers>
                <TapGestureRecognizer 
                    NumberOfTapsRequired="1"
                    Command="{Binding NavigateToMainPageCommand}" />
            </Image.GestureRecognizers>
        </Image>

    </VerticalStackLayout>

</ContentPage>
